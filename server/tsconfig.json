{
  "compilerOptions": {
    "target": "esnext",
    "module": "nodenext",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "sourceMap": true,
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["node", "jest"], // ✅ Added "jest" here
    "verbatimModuleSyntax": true,
    "isolatedModules": true
  },
  "include": ["src/**/*"], // ✅ This now covers src/tests
  "exclude": ["node_modules"]
}